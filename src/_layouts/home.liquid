---
layout: default
---
<!-- this is the home layout -->

<section class="home-foods">
  <img src="{{ '/images/pizza.jpg' | relative_url }}" alt=""/>
  <img src="{{ '/images/pasta.jpg' | relative_url }}" alt=""/>
  <img src="{{ '/images/panini.jpg' | relative_url }}" alt=""/>
</section>

<header>
  {{ data.title }}
</header>

<main class="home-content">
  {{ data.main_body }}
</main>

<main class="home-slice-content">
  {{ content }}
</main>

<section class="sliced-customer-logos">
  {% render "customer_logos", variable_one: site.metadata, variable_two: resource %}
</section>
